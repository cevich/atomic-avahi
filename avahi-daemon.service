[Unit]
Description=Avahi Container
After=docker.service

[Service]
Type=simple
Restart=always
RestartSec=60
TimeoutSec=2
Environment="HOME=/run/avahi-daemon"
WorkingDirectory=/run/avahi-daemon
ExecStartPre=/usr/bin/mkdir -p /run/avahi-daemon
ExecStart=/usr/bin/atomic run --name=avahi-daemon avahi-daemon
ExecStop=/usr/bin/docker rm --force avahi-daemon

[Install]
WantedBy=local.target
